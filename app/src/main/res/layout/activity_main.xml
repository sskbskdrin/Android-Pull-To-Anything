<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include android:id="@+id/title_layout"
             layout="@layout/title_layout"/>
    <cn.sskbskdrin.pull.PullLayout android:id="@+id/main_pull"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_below="@id/title_layout"
                                   app:pull_bottom_id="@+id/main_bottom"
                                   app:pull_content_id="@+id/main_list"
                                   app:pull_top_id="@+id/main_top">

        <ListView android:id="@id/main_list"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>

        <cn.sskbskdrin.pull.refresh.ClassicHeader android:id="@id/main_bottom"
                                                  android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"/>

        <cn.sskbskdrin.pull.refresh.MaterialHeader android:id="@id/main_top"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="10dp"/>

    </cn.sskbskdrin.pull.PullLayout>
</RelativeLayout>
