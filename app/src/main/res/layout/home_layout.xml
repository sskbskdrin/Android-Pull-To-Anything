<?xml version="1.0" encoding="utf-8"?>
<cn.sskbskdrin.pull.PullLayout xmlns:android="http://schemas.android.com/apk/res/android"
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               app:pull_orientation="vertical">

    <cn.sskbskdrin.recycler.BaseRecyclerView android:id="@+id/home_list"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             app:pull_isContentView="true"/>
    
    <cn.sskbskdrin.pull.refresh.ClassicHeader android:id="@+id/home_top"
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              app:pull_inParentPosition="top"/>

    <cn.sskbskdrin.pull.refresh.MaterialHeader android:id="@+id/home_bottom"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:padding="5dp"
                                               app:pull_inParentPosition="bottom"/>

</cn.sskbskdrin.pull.PullLayout>
