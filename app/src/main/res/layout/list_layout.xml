<?xml version="1.0" encoding="utf-8"?>
<cn.sskbskdrin.pull.PullLayout android:id="@+id/list_pull"
                               xmlns:android="http://schemas.android.com/apk/res/android"
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

    <ListView android:id="@+id/list_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:pull_isContentView="true"/>

    <cn.sskbskdrin.pull.refresh.ClassicHeader android:id="@+id/list_top"
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              app:pull_inParentPosition="top"/>

</cn.sskbskdrin.pull.PullLayout>