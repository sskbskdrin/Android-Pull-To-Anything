<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp">

        <ImageView
            android:id="@+id/pull_header_rotate_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/refresh_arrow"/>

        <ProgressBar
            android:id="@+id/pull_header_progressbar"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pull_header_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pull_down_to_refresh"
            android:textColor="#666666"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/pull_header_last_update"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>


</RelativeLayout>
